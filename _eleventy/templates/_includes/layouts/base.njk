<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} - {% endif %}{{ site.username | capitalize }}</title>
    <style>
        :root {
            --bg-primary: #f5f5f5;
            --bg-secondary: #fff;
            --bg-tertiary: #f9f9f9;
            --bg-code: #f6f8fa;
            --text-primary: #1a1a1a;
            --text-secondary: #333;
            --text-muted: #666;
            --text-faint: #999;
            --border-color: #e0e0e0;
            --link-color: #0066cc;
            --link-visited: #551a8b;
            --link-hover: #004499;
            --error-bg: #fff5f5;
            --error-border: #dc3545;
            --error-text: #721c24;
            --shadow: rgba(0,0,0,0.1);
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --bg-primary: #1a1a1a;
                --bg-secondary: #2d2d2d;
                --bg-tertiary: #333;
                --bg-code: #3a3a3a;
                --text-primary: #f0f0f0;
                --text-secondary: #d0d0d0;
                --text-muted: #a0a0a0;
                --text-faint: #888;
                --border-color: #444;
                --link-color: #6db3f2;
                --link-visited: #b39ddb;
                --link-hover: #90caf9;
                --error-bg: #3d2020;
                --error-border: #f56565;
                --error-text: #feb2b2;
                --shadow: rgba(0,0,0,0.3);
            }
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            overflow-x: hidden;
            max-width: 100%;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: var(--text-secondary);
            background: var(--bg-primary);
            margin-left: 280px; /* Account for fixed sidebar */
            overflow-x: hidden;
            max-width: 100%;
        }

        .container {
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            padding: 0 20px;
        }

        header {
            background: var(--bg-secondary);
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
            margin-bottom: 2rem;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .site-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            text-decoration: none;
        }

        header nav ul {
            list-style: none;
            display: flex;
            gap: 2rem;
        }

        header nav a {
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

        header nav a:hover {
            color: var(--text-primary);
        }

        .breadcrumb {
            background: var(--bg-secondary);
            padding: 0.75rem 1rem;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .breadcrumb a {
            color: var(--link-color);
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .breadcrumb span {
            color: var(--text-faint);
            margin: 0 0.5rem;
        }

        main {
            background: var(--bg-secondary);
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 1px 3px var(--shadow);
            margin-bottom: 2rem;
            overflow-wrap: break-word;
            word-wrap: break-word;
            max-width: 100%;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--text-primary);
        }

        h2 {
            font-size: 1.5rem;
            margin: 2rem 0 1rem;
            color: var(--text-primary);
        }

        h3 {
            font-size: 1.25rem;
            margin: 1.5rem 0 0.75rem;
            color: var(--text-secondary);
        }

        a {
            color: var(--link-color);
        }

        a:visited {
            color: var(--link-visited);
        }

        a:hover {
            color: var(--link-hover);
        }

        /* Collapsible sections */
        .collapsible-h2 {
            position: relative;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .collapsible-caret {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 20px;
            height: 20px;
            cursor: pointer;
            user-select: none;
            transition: transform 0.2s ease;
            color: var(--text-muted);
            font-size: 0.8em;
            flex-shrink: 0;
        }

        .collapsible-caret:hover {
            color: var(--text-primary);
        }

        .collapsible-caret.collapsed {
            transform: rotate(0deg);
        }

        .collapsible-caret.expanded {
            transform: rotate(90deg);
        }

        .collapsible-content {
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .collapsible-content.collapsed {
            max-height: 0;
            visibility: hidden;
        }

        .collapsible-content.expanded {
            max-height: none;
            visibility: visible;
        }

        .content,
        .markdown-content {
            max-width: 100%;
            overflow-wrap: break-word;
            word-wrap: break-word;
        }

        .content p {
            margin-bottom: 1rem;
            overflow-wrap: break-word;
            word-wrap: break-word;
        }

        .content a {
            word-break: break-all;
            overflow-wrap: break-word;
        }

        .content ul, .content ol {
            margin-left: 2rem;
            margin-bottom: 1rem;
        }

        .content li {
            margin-bottom: 0.5rem;
            overflow-wrap: break-word;
            word-wrap: break-word;
        }

        .content pre {
            background: var(--bg-code);
            padding: 1rem;
            border-radius: 6px;
            overflow-x: auto;
            margin-bottom: 1rem;
        }

        .content code {
            background: var(--bg-code);
            padding: 0.2rem 0.4rem;
            border-radius: 3px;
            font-family: 'Monaco', 'Courier New', monospace;
            font-size: 0.9em;
        }

        .content pre code {
            background: none;
            padding: 0;
        }

        .content table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
            display: block;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            max-width: 100%;
        }

        .content th,
        .content td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
            white-space: nowrap;
            min-width: 100px;
        }

        .content th {
            background: var(--bg-code);
            font-weight: 600;
        }

        .file-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .file-card,
        .folder-card {
            background: var(--bg-tertiary);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            padding: 1rem;
            transition: all 0.2s;
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .file-card:hover,
        .folder-card:hover {
            background: var(--bg-secondary);
            box-shadow: 0 2px 8px var(--shadow);
            transform: translateY(-2px);
        }

        .file-icon,
        .folder-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .file-name,
        .folder-name {
            font-weight: 500;
            color: var(--text-primary);
            word-break: break-word;
        }

        .file-meta {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 0.5rem;
        }

        footer {
            text-align: center;
            padding: 2rem 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            body {
                margin-left: 0; /* Reset sidebar margin on mobile */
            }

            .container {
                padding: 0;
                max-width: 100%;
            }

            main {
                padding: 1rem;
                border-radius: 0;
                margin: 0 0 1rem;
                max-width: 100vw;
                width: 100%;
            }

            header {
                margin: 0;
                padding: 1rem;
            }

            header nav ul {
                flex-direction: column;
                gap: 0.5rem;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .file-grid {
                grid-template-columns: 1fr;
            }

            .content pre {
                margin: 0 -1rem 1rem;
                padding: 1rem;
                border-radius: 0;
                max-width: calc(100vw - 2rem);
            }

            .content table {
                font-size: 0.85rem;
                width: auto;
                min-width: 100%;
            }

            .content th,
            .content td {
                padding: 0.5rem 0.35rem;
                min-width: 80px;
                font-size: 0.8rem;
            }

            .content a {
                word-break: break-word;
            }
        }
    </style>
    {% block head %}{% endblock %}
</head>
<body>
    {% include "components/sidebar-nav.njk" %}

    <header>
        <div class="container header-content">
            <a href="/" class="site-title">{{ site.username | capitalize }}'s Workspace</a>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    {% if collections.workflows.length > 0 %}
                    <li><a href="/workflows/">Workflows</a></li>
                    {% endif %}
                    {% if collections.outputs.length > 0 %}
                    <li><a href="/outputs/">Outputs</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </header>

    {% if breadcrumb or breadcrumbHtml %}
    <div class="container">
        <div class="breadcrumb">
            {{ (breadcrumb or breadcrumbHtml) | safe }}
        </div>
    </div>
    {% endif %}

    <div class="container">
        <main>
            {% block content %}
            {{ content | safe }}
            {% endblock %}
        </main>
    </div>

    <footer>
        <div class="container">
            <p>&copy; {{ site.year }} {{ site.username | capitalize }}'s Workspace</p>
        </div>
    </footer>

    <script>
        (function() {
            // Only run on pages with markdown content
            const mainContent = document.querySelector('main');
            if (!mainContent) return;

            // Get all h2 headings
            const h2Elements = mainContent.querySelectorAll('h2');
            if (h2Elements.length === 0) return;

            // Get page path for localStorage key
            const pagePath = window.location.pathname;
            const storageKey = 'collapsible-sections-' + pagePath;

            // Load saved state from localStorage
            let savedState = {};
            try {
                const saved = localStorage.getItem(storageKey);
                if (saved) {
                    savedState = JSON.parse(saved);
                }
            } catch (e) {
                console.error('Error loading collapsible state:', e);
            }

            // Process each h2 heading
            h2Elements.forEach((h2, index) => {
                // Generate unique ID for this heading
                const headingId = h2.id || 'heading-' + index;
                if (!h2.id) h2.id = headingId;

                // Create wrapper div for the h2 with flex layout
                const h2Wrapper = document.createElement('div');
                h2Wrapper.className = 'collapsible-h2';
                h2.parentNode.insertBefore(h2Wrapper, h2);

                // Create caret icon
                const caret = document.createElement('span');
                caret.className = 'collapsible-caret';
                caret.innerHTML = 'â–¶';
                caret.setAttribute('role', 'button');
                caret.setAttribute('aria-label', 'Toggle section');

                // Move h2 into wrapper and add caret before it
                h2Wrapper.appendChild(caret);
                h2Wrapper.appendChild(h2);

                // Find all content between this h2 and the next h2 (or end of content)
                const contentElements = [];
                let nextElement = h2Wrapper.nextElementSibling;

                while (nextElement && nextElement.tagName !== 'H2') {
                    contentElements.push(nextElement);
                    nextElement = nextElement.nextElementSibling;
                }

                // Only create collapsible container if there's content to collapse
                if (contentElements.length === 0) {
                    // No content to collapse, remove the caret
                    caret.style.visibility = 'hidden';
                    return;
                }

                // Create collapsible content wrapper
                const contentWrapper = document.createElement('div');
                contentWrapper.className = 'collapsible-content';

                // Move content elements into wrapper
                contentElements.forEach(el => {
                    contentWrapper.appendChild(el);
                });

                // Insert content wrapper after h2 wrapper
                h2Wrapper.parentNode.insertBefore(contentWrapper, h2Wrapper.nextElementSibling);

                // Determine initial state (default to expanded if not in localStorage)
                const isCollapsed = savedState[headingId] === false;

                // Set initial state
                if (isCollapsed) {
                    caret.classList.add('collapsed');
                    caret.classList.remove('expanded');
                    contentWrapper.classList.add('collapsed');
                    contentWrapper.classList.remove('expanded');
                } else {
                    caret.classList.add('expanded');
                    caret.classList.remove('collapsed');
                    contentWrapper.classList.add('expanded');
                    contentWrapper.classList.remove('collapsed');
                }

                // Toggle function
                function toggleSection() {
                    const isCurrentlyCollapsed = contentWrapper.classList.contains('collapsed');

                    if (isCurrentlyCollapsed) {
                        // Expand
                        caret.classList.remove('collapsed');
                        caret.classList.add('expanded');
                        contentWrapper.classList.remove('collapsed');
                        contentWrapper.classList.add('expanded');
                        savedState[headingId] = true;
                    } else {
                        // Collapse
                        caret.classList.remove('expanded');
                        caret.classList.add('collapsed');
                        contentWrapper.classList.remove('expanded');
                        contentWrapper.classList.add('collapsed');
                        savedState[headingId] = false;
                    }

                    // Save state to localStorage
                    try {
                        localStorage.setItem(storageKey, JSON.stringify(savedState));
                    } catch (e) {
                        console.error('Error saving collapsible state:', e);
                    }
                }

                // Add click handler only to the caret
                caret.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    toggleSection();
                });

                // Add keyboard support for accessibility
                caret.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        toggleSection();
                    }
                });

                // Make caret focusable
                caret.setAttribute('tabindex', '0');
            });
        })();
    </script>
</body>
</html>
